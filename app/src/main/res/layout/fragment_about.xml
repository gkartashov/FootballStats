<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutFragment"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <ImageView
            android:id="@+id/about_logo"
            android:layout_width="match_parent"
            android:layout_height="200dp"

            android:src="@drawable/ic_logo_final_dark" />

        <TextView
            android:id="@+id/about_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/about_logo"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="18dp"
            android:text="Ultimate capper's helper."/>

        <TextView
            android:id="@+id/about_thanks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_below="@+id/about_description"
            android:text="Special thanks to:"/>

        <TextView
            android:id="@+id/about_thanks_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/about_thanks"
            android:gravity="center"
            android:text="Wojak\nLildique\nMidery"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:text="2018" />

</RelativeLayout>