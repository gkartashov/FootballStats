<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProfileActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/inner_activity_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:theme="@style/ToolBarStyle" />

    <ProgressBar
        android:id="@+id/profile_progress_bar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/profile_stats_view"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/profile_info_layout"
                android:background="@color/listItemsColor">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_logo"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="2dp"
                    app:civ_circle_background_color="#FFF"
                    android:src="@drawable/profile_logo"/>

                <TextView
                    android:id="@+id/profile_username"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profile_logo"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="6dp"
                    android:gravity="center"
                    android:text="username"/>

                <LinearLayout
                    android:id="@+id/profile_total_bets_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_toEndOf="@+id/profile_logo">
                    <TextView
                        android:id="@+id/profile_total_bets_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:textStyle="bold"
                        android:text="Total bets:"/>
                    <TextView
                        android:id="@+id/profile_total_bets"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="50"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/profile_in_play_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_toEndOf="@+id/profile_logo"
                    android:layout_below="@+id/profile_total_bets_layout">
                    <TextView
                        android:id="@+id/profile_in_play_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:textStyle="bold"
                        android:text="Bets in play:"/>
                    <TextView
                        android:id="@+id/profile_in_play"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="100"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/profile_returned_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_toEndOf="@+id/profile_logo"
                    android:layout_below="@+id/profile_in_play_layout">
                    <TextView
                        android:id="@+id/profile_returned_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:textStyle="bold"
                        android:text="Returned bets:"/>
                    <TextView
                        android:id="@+id/profile_returned"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="200"/>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/profile_roi_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_toEndOf="@+id/profile_logo"
                    android:layout_below="@+id/profile_returned_layout">
                    <TextView
                        android:id="@+id/profile_roi_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:textStyle="bold"
                        android:text="ROI:"/>
                    <TextView
                        android:id="@+id/profile_roi"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:gravity="end"
                        android:text="146.6666%"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/profile_yield_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_toEndOf="@+id/profile_logo"
                    android:layout_below="@+id/profile_roi_layout">
                    <TextView
                        android:id="@+id/profile_yield_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:textStyle="bold"
                        android:text="Yield:"/>
                    <TextView
                        android:id="@+id/profile_yield"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:gravity="end"
                        android:text="-146.6666%"/>
                </LinearLayout>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/profile_pie_wl_ratio_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/profile_info_layout"
                android:gravity="start">
                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/profile_pie_wl_ratio"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="10dp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/profile_coefficient_chart_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/profile_pie_wl_ratio_layout"
                android:gravity="start">
                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/profile_coefficient_chart"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginTop="10dp"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>
