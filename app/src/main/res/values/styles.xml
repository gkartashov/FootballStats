<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primaryColorDark</item>
        <item name="colorPrimaryDark">@color/primaryDarkColorDark</item>
        <item name="colorAccent">@color/primaryAccentColorDark</item>
        <item name="android:statusBarColor">@color/statusBarColorDark</item>
    </style>

    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="colorPrimary">@color/primaryColorLight</item>
        <item name="colorPrimaryDark">@color/primaryDarkColorLight</item>
        <item name="colorAccent">@color/secondaryDarkColorLight</item>
        <item name="android:statusBarColor">@color/primaryLightColorLight</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:colorBackground">@color/background_light</item>
    </style>

    <style name="AppTheme.LauncherTheme.Dark" parent="AppTheme">
        <item name="android:windowBackground">@drawable/launch_screen_dark</item>
    </style>

    <style name="AppTheme.LauncherTheme.Light" parent="AppTheme.Light">
        <item name="android:windowBackground">@drawable/launch_screen_light</item>
    </style>

    <style name="AppTheme.ThemeSwitcher" >
        <item name="colorControlActivated">@color/primaryDarkColorDark</item>
        <item name="android:colorControlNormal">#FFF</item>
        <item name="android:colorForeground">@color/primaryDarkColorLight</item>
    </style>

    <style name="RecyclerViewItem">
        <item name="android:backgroundTint">@color/listItemsColorDark</item>
    </style>

    <style name="AppTheme.ToolBarStyle" parent="AppTheme">
        <item name="android:backgroundTint">@color/primaryColorDark</item>
        <item name="android:textColorPrimary">@color/primaryTextColorDark</item>
        <item name="android:textColorSecondary">@color/primaryTextColorDark</item>
    </style>

    <style name="AppThemeLight.ToolBarStyle" parent="AppTheme.Light">
        <item name="android:backgroundTint">@color/primaryLightColorLight</item>
        <item name="android:textColorPrimary">@color/primaryTextColorLight</item>
        <item name="android:textColorSecondary">@color/secondaryTextColorLight</item>
    </style>


</resources>
